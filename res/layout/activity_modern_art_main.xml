<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.coursera.modernartui.ModernArtMainActivity" >

    <LinearLayout 
        android:id="@+id/rectangles_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:baselineAligned="false">
        
	    <LinearLayout
	        android:id="@+id/first_collum"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@color/black"
	        android:orientation="vertical"
	        android:layout_marginRight="10dp" >
	        
	        <LinearLayout 
	            android:id="@+id/first_rectangle"
	            android:orientation="horizontal"
	            android:layout_height="0dp"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:layout_marginBottom="10dp">
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/second_rectangle"
	            android:orientation="horizontal"
	            android:layout_height="0dp"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:layout_marginBottom="5dp">
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/second_collum"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@color/black"
	        android:orientation="vertical">
	        
	        <LinearLayout 
	            android:id="@+id/third_rectangle"
	            android:orientation="horizontal"
	            android:layout_height="0dp"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:layout_marginBottom="10dp">
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/fourth_rectangle"
	            android:orientation="horizontal"
	            android:layout_height="0dp"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:layout_marginBottom="10dp">
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/fifth_rectangle"
	            android:orientation="horizontal"
	            android:layout_height="0dp"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:background="@color/white"
	            android:layout_marginBottom="5dp">
	        </LinearLayout>
	        
	    </LinearLayout>
    </LinearLayout>
    
    <SeekBar
        android:id="@+id/seekBar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
