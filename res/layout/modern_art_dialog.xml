<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outside_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/default_blue_background"
        android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/dialog_message" />
            
            <LinearLayout
        		android:id="@+id/dialog_buttons"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:background="@color/default_blue_background"
        		android:orientation="horizontal"
        		android:paddingTop="20dp"
        		android:paddingBottom="10dp" >

            	<Button
                	android:id="@+id/dialog_negative_button"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textSize="15sp"
                	android:layout_weight="1"
                	android:textColor="@color/white"
                	android:background="@drawable/dialog_button_selector"
                	android:text="@string/dialog_negative_button" />


            	<Button
                	android:id="@+id/dialog_positive_button"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textSize="15sp"
                	android:layout_weight="1"
                	android:textColor="@color/white"
                	android:background="@drawable/dialog_button_selector"
                	android:text="@string/dialog_positive_button" />
    		</LinearLayout>
            
    </LinearLayout>

</RelativeLayout>